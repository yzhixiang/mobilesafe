<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">
	
	<TextView 
	    android:layout_width="fill_parent"
	    android:layout_height="55dp"
	    android:background="#8866ff00"
	    android:textSize="20sp"
	    android:gravity="center"
	    android:textColor="#000000"
	    android:text="手机防盗"/>
	
	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
	    
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dip"
	        android:layout_marginLeft="5dip"
	        android:text="安全号码"
	        android:textSize="18sp"
	        android:textColor="#000000"/>
	    
	    <TextView 
	        android:id="@+id/tv_safe_number"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_marginTop="10dip"
	        android:layout_marginRight="5dip"
	        android:text="XXXX"
	        android:textSize="18sp"
	        android:textColor="#000000"/>
	</RelativeLayout>
	
	<View 
	    android:layout_width="fill_parent"
	    android:layout_height="0.1dip"
	    android:background="#44000000"
	    android:layout_marginTop="10dip"
	    android:layout_marginLeft="5dip"
	    android:layout_marginRight="5dip"/>
	
	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
	    
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dip"
	        android:layout_marginLeft="5dip"
	        android:text="防盗保护是否开启"
	        android:textSize="18sp"
	        android:textColor="#000000"/>
	    
	    <ImageView 
	        android:id="@+id/iv_protectting_status"
	        android:layout_width="25dip"
	        android:layout_height="25dip"
	        android:layout_alignParentRight="true"
	        android:layout_marginTop="10dip"
	        android:layout_marginRight="5dip"
	        android:src="@drawable/unlock"/>
	</RelativeLayout>
	
	<View 
	    android:layout_width="fill_parent"
	    android:layout_height="0.1dip"
	    android:background="#44000000"
	    android:layout_marginTop="10dip"
	    android:layout_marginLeft="5dip"
	    android:layout_marginRight="5dip"/>
	
	<TextView 
	    android:background="@drawable/shape_selector"
	    android:clickable="true"
	    android:onClick="reEnterSetting"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dip"
	    android:layout_marginLeft="5dip"
	    android:textColor="#000000"
	    android:textSize="18sp"
	    android:text="重新进入设置向导页面"/>
	
	<View
        android:layout_width="fill_parent"
        android:layout_height="0.1dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="10dip"
        android:background="#44000000" />
					
	<TextView
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="10dip"
        android:background="#44000000"
        android:text="功能简介"
        android:textColor="#000000"
        android:textSize="18sp" />
	
	<View
        android:layout_width="fill_parent"
        android:layout_height="0.1dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="10dip"
        android:background="#44000000" />
	
	<TextView
        style="@style/text_content_style"
        android:drawableLeft="@android:drawable/star_big_on"
        android:text="GPS追踪:location" />
	
	<TextView
        style="@style/text_content_style"
        android:drawableLeft="@android:drawable/star_big_on"
        android:text="播放报警音乐:alarm" />
	
	<TextView
        style="@style/text_content_style"
        android:drawableLeft="@android:drawable/star_big_on"
        android:text="远程删除数据:wipedata" />
	
	<TextView
        style="@style/text_content_style"
        android:drawableLeft="@android:drawable/star_big_on"
        android:text="远程锁屏:lockscreen" />
    
</LinearLayout>
