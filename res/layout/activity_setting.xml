<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:itheima="http://schemas.android.com/apk/res/com.itheima.mobilesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">
	
	<TextView 
	    android:layout_width="fill_parent"
	    android:layout_height="55dp"
	    android:background="#8866ff00"
	    android:textSize="20sp"
	    android:gravity="center"
	    android:textColor="#000000"
	    android:text="设置中心"/>
	
	<com.itheima.mobilesafe.ui.SettingView
	    android:id="@+id/siv_update" 
	    itheima:title="设置自动升级"
	    itheima:desc_on="自动升级已经开启"
	    itheima:desc_off="自动升级已经关闭"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"/>
	
	<com.itheima.mobilesafe.ui.SettingView
        android:id="@+id/siv_show_address"
        itheima:title="设置号码归属地显示"
        itheima:desc_on="号码归属地显示已经打开"
        itheima:desc_off="号码归属地显示已经关闭"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
	
    
</LinearLayout>
